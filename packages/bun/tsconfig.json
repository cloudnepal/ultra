{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ES2022",
    "importHelpers": false, 
    "moduleResolution": "node",                               
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "types"
    ],
    "types": [
      "bun-types",
    ]
  },
  "exclude": [
    "node_modules",
    "tmp",
    "build"
  ],
}
