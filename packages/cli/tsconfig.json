{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ES2022",
    "importHelpers": false, 
    "moduleResolution": "node",                               
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "tmp",
    "build"
  ],
}
